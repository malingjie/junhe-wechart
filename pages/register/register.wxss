.main{
 
  height: 100vh;
  background: #e8e9e8;
}
.item{
  display: flex;
  border-bottom: 1px solid #d8d8d8;
  line-height: 40px;
  padding: 15px 0 0 0;
  flex-direction: row
  
}
.data{
  background: #fff;
  padding: 0 20px;
}
.item text {
  flex: 0 1 25%;
  font-size: 14px;
  color: #333333;
}

.item input{
  flex: 1 1 auto;
  font-size: 16px;
  color: #333333;
  line-height: 40px;
  height: 40px;
}

.item .icon{
  flex: 0 1 10%;
  text-align: right;
}

.item .img{
  flex: 0 1 10%;
  text-align: right;
}

.item picker{
 flex: 1 1 auto;
}
.item .picker{
 font-size:30rpx;
}

.item .icon image{
  width:8px;
  height:15px;
}
.item .img image{
  width:120rpx;
  height:100rpx;
}

.text{
  font-size: 12px;
  color: #999999;
  background: #fff;
  padding: 10px 20px;
}

.item button{
height: 40px
}

.btn{
  line-height: 46px;
  background: #E5E5E5;
  font-size: 18px;
  color: #FFFFFF;
  text-align:center;
  margin:50px 30px;
  border-radius:2px;
}
.active{
  background:#ff5f19;
}
.tip{
  color: red;
}
.picker1{
  margin-top: 36rpx;
  font-size: 40rpx
}
.register{
    padding-left: 30rpx;
    padding-right: 30rpx;
}