/* pages/good_detail/good_detail.wxss */

/* 大图样式 */

.bigImg {
  height: 450rpx;
}

.bigImg image {
  width: 100%;
}

/* 价格区域样式 */

.Info {
  padding: 50rpx 50rpx;
  width: 100%;
  height: 120rpx;
  background-color: #d8d8d8;
  font-size: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  line-height: 60rpx;
}

/* 规格区域样式 */

.specification {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.specification .text1 {
  width: 20%;
  color: #d8d8d8;
  text-align: center;
  font-size: 30rpx;
}

.specification .text2 {
  font-size: 30rpx;
}

.specification .icon {
  flex: 0 1 45%;
  text-align: right;
}

.specification .icon image {
  width: 13px;
  height: 20px;
}

.block {
  background-color: #d8d8d8;
  height: 10rpx;
}

/* 商品信息区域样式 */

.good-info {
  display: flex;
  flex-direction: column;
}

.good-info text {
  font-size: 30rpx;
}

.detail {
  height: 300rpx;
  display: flex;
  flex-direction: row;
}

.detail image {
  padding-left: 30rpx;
  padding-top: 30rpx;
  width: 30%;
  height: 60%;
}

.detail text {
  width: 70%;
  height: 100%;
}

/* 底部按钮样式 */

.btn {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.btn-buy {
  width: 260rpx;
  background: #ff5f19;
  letter-spacing: 7rpx;
  margin: 30rpx 30rpx;
}
.btnToast{
   width: 100%;
  background: #ff5f19;
  letter-spacing: 7rpx
}

/* 弹框样式 */

.myToast {
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 90vh;
  line-height: 150rpx;
  border-radius: 20rpx;
  background-color: rgb(255, 255, 255);
  color: rgb(114, 113, 113);
  font-size: 76rpx;
  text-align: center;
  z-index: 100;
  opacity: 1;
  display: flex;
  flex-direction: column;
}

.rowToast {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 100rpx;
  border-bottom: 1rpx solid rgb(114, 113, 113);
}

.rowToast .item {
  font-size: 24rpx;
  width: 20%;
}

.rowToast .info {
  width: 80%;
  color: black;
}
