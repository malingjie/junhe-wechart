/* pages/shopping/shopping.wxss */

/* 轮播图样式 */

.title {
  height: 40rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title .corn {
  height: 100%;
  width: 30rpx;
}

.title .re {
  margin-left: 10rpx;
}

.title .on {
  height: 28rpx;
  width: 98rpx;
  line-height: 28rpx;
  margin-left: 30rpx;
  text-align: center;
  background-color: #65b9ff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  
}

.on text {
  color: white;
  letter-spacing: 5rpx;
  font-size: 20rpx;
}

swiper {
  width: 100%;
  height: 33vh;
  text-align: center;
}

.swiper-box {
  position: relative;
  width: 100%;
}

.slide-image {
  width: 95%;
  height: 100%;
  align-content: center;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

/*轮播图的小点点样式*/

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
  background-color: rgba(225, 225, 225, 0);
}

.dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all 0.6s;
}

.dots .dot.active {
  width: 24rpx;
  background: #0072e3;
}

/* 商品展示块 */

.show-imgs {
  margin-top: 60rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

/* 具体商品展示图片 */

.show-image {
  width: 80%;
  height: 300rpx;
  text-align: center;
  margin-top: 16rpx;
}

.text {
  display: flex;
  flex-direction: row;
  height: 20%;
}

.text image {
  height: 36rpx;
  width: 30rpx;
}

.text text {
  margin-left: 10rpx;
}

.detail-image {
  width: 100%;
  height: 80%;
  border-radius: 16rpx;
}

text {
  font-size: 32rpx;
}
