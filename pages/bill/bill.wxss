/* pages/bill/bill.wxss */
/* 提示信息字体样式 */
.item{
  display: flex;
  border-bottom: 1px solid #d8d8d8;
  line-height: 40px;
  padding: 15px 0 0 0;
  flex-direction: row
  
}
.data{
  background: #fff;
  padding: 0 20px;
}
.item text {
  flex: 0 1 25%;
  font-size: 14px;
  color: #333333;
}

.item input{
  flex: 1 1 auto;
  font-size: 16px;
  color: #333333;
  line-height: 40px;
  height: 40px;
}

.item .buyform{
    width: 20%;
}
.item button{
      width: 25%;
font-size: 10px;
height: 60rpx;
} 
.item .img{
  flex: 0 1 10%;
  text-align: right;
}
.item .img image{
  width:120rpx;
  height:100rpx;
}

.btn{
  line-height: 46px;
  background: #E5E5E5;
  font-size: 18px;
  color: #FFFFFF;
  text-align:center;
  margin:50px 30px;
  border-radius:2px;
}
.active{
  background:#ff5f19;
}

.tip{
  color: red;
}
.zz{
    text-align: center;
}